<main>

    {{!-- Formul√°rio --}}
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="/cadastrar" method="post" enctype="multipart/form-data">
                    <input type="text"   name="nome"  class="form-control" placeholder="Nome do Candidato">
                    <input type="number" name="numero"  class="form-control" placeholder="Numero do Candidato">
                    <input type="file"   name="imagem"  class="form-control">
                    <input type="submit" class="btn btn-primary" value="Cadastrar">
                </form>
            </div>
        </div>
    </div>

{{!-- Listagem de produtos --}}
    <div class="container">
        <div class="row">
            {{#each candidatos}}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <img src="../imagens/{{imagem}}">
                        <div class="textos">
                            <p>{{nome}}</p>
                            <p>{{numero}}</p>
                        </div>
                        <a href="/formularioEditar/{{idCandidato}}" class="btn btn-warning">Alterar</a>
                         <a href="/remover/{{idCandidato}}&{{imagem}}" class="btn btn-danger">Remover</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>
